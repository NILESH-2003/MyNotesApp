{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build" // Directory for built files
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html" // Serve index.html for all routes (SPA)
    }
  ]
}
